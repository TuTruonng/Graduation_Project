<div class="row">
    <div class="col-md-9">
        @foreach (var name in Model)
        {
            <h2 style="margin-left: 100px;"> @name.CategoryName</h2>
            break;
        }

        <hr />
        @if (Model.Count() != 0)
        {
            @foreach (var product in Model)
            {
                <div class="card" id="card-real">
                    <div class="row no-gutters" id="card-content">
                        <div class="col-md-4" id="img-content">
                            <img style="height: 100%" class="card-img" src="@product.Image" alt="Card image cap">
                        </div>
                        <div class="col-md-8" id="card-body">
                            <p class="card-title">
                                @(product.Title.Length > 100 ? product.Title.Substring(0, 100) + "..." : product.Title)
                            </p>
                            <p class="card-text">@product.Price VND</p>
                            <p class="card-text">
                                @product.Location
                            </p>
                            <p style="color: gray">Đăng bởi: @product.UserName</p>
                            <p style="color: gray">@product.CreateTime</p>
                            <a class="btn btn-block" style="color:deepskyblue" asp-action="Details" asp-controller="RealEstate" asp-route-id="@product.RealEstateID ">Xem chi tiết</a>

                        </div>
                    </div>
                </div>
                <br />
            }
            <br />
        }
        else
        {
            <div class="row">
                <strong>Không có sản phẩm nào!</strong>
            </div>
        }
    </div>
