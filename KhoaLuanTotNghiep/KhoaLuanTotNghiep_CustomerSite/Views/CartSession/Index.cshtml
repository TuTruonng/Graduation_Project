<div class="divider" style="text-align: center;"><span></span><span class="title-products" style="font-size:32px;color:crimson">Tin lưu trữ</span><span></span></div>
<div>
    @foreach (var item in @Model)
    {
        <div class="container-fluid" style="margin-top:20px; margin-bottom:20px;">
