                <tr>
                    <td><img src="@item.Image" alt="cartItemImage" style="width:150px" /></td>
                    <td style="width:200px">@item.CategoryName</td>
                    <td style="width:900px">@item.Title</td>
                    <td style="width:150px">@item.Location</td>
                    <td style="width:100px">@string.Concat(string.Format("{0:#,##0}", item.Price), " vnđ")  </td>
                    <td style="width:100px">
                        <div class="row" style="float:right;margin-right:5px">
                            <button type="button" onclick=" location.href = '@Url.Action("Delete", "CartSession", new { id = item.RealEstateID})';" class="btn btn-outline-danger btn-lg">Xóa</button>
                        </div>
                    </td>
                </tr>

            </table>
