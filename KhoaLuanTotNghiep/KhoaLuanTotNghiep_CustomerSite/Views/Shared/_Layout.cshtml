<body>

    <header>
        @using Microsoft.AspNetCore.Http;
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="width: 100%">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.jpeg" style="width: 100px">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="font-weight:bold; margin-right:20px;margin-left:150px">
                        <li class="nav-item">
                            @await Component.InvokeAsync("CategoryMenu")
                        </li>

                        <li class="nav-item" style="margin-top:9px; font-weight:bold">
                            <a href="~/News" style="color:black">
                                Tin Tức
                            </a>
                        </li>
                        @*<li style="list-style: none;margin-right: 40px;margin-bottom: 15px;">
                                <a href="/Cart/cart">
                                    <i class="fas fa-shopping-cart" style="font-size:30px">
                                    </i>
                                </a>
                            </li>*@
                    </ul>
                    @*<partial name="_LoginPartial" />*@

                </div>

                <a href="/Order/OrderWaitingAccept">
                    <i class="fas fa-shopping-cart" style="font-size: 20px; margin-right: 40px">
                    </i>
                </a>
                <a href="/Cart/cart">
                    <i class="fas fa-heart" style="font-size: 20px; margin-right: 50px">
                    </i>
                </a>
                @if (Context.Session.GetString("JWToken") == null)
                {

                    <a href="~/Login" style="color: black; margin-right: 40px">
                        Đăng nhập
                    </a>

                }
                @if (Context.Session.GetString("JWToken") != null)
                {

                    <p style="font-weight: bold; margin-right:40px; margin-top: 20px">@Context.Session.GetString("Username")</p>



                    <a href="~/Logout" style="color:black; margin-right:30px">
                        Đăng xuất
                    </a>

                }
                <a asp-page="/RealEstates/Create" class="btn btn-success">
                    Đăng tin
                </a>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="center-page" style="margin: -10px">
            <div id="myModalSuccess" class="modal fade text=witdh:30%" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2>Thông báo</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div id="MyModalSuccessAlertBody" class="modal-body alert alert-success">
                            this is
                        </div>
                        <div class="modal-footer">
                            &nbsp;
                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="myModalFail" class="modal fade text=witdh:30%" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2>Thông báo</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div id="MyModalFailAlertBody" class="modal-body alert alert-danger">
