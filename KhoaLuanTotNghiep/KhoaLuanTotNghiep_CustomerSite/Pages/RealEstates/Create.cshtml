            <div class="field-info">
                <div class="title-info">
                    <h4 style="color: white">Thông Tin Mô Tả</h4>
                </div>
                <div class="mb-3">
                    <label asp-for="realEstate.Description"></label>
                    <input asp-for="realEstate.Description" class="form-control" />
                    <span asp-validation-for="realEstate.Description" class="text-danger"></span>
                </div>
            </div>
            <br />
