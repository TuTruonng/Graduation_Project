@section Scripts {
    <script src="~/lib/dropzone.js"></script>
    <script>
        $("#imageUploadForm").dropzone({
            url: "/imageupload",
            paramName: "image",
            acceptedFiles: "image/*",
            success: function (file) {
                $("#recentImage").attr('src', `./uploads/${file.name}`);
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
